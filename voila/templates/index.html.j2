<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title | default('Voici Index (Voila)') }}</title>
  </head>
  <body>
    <h1>{{ title | default('Voici Index (Voila)') }}</h1>
    <p>Minimal index template for static voici/voila builds.</p>
    {% if pages %}
      <ul>
      {% for p in pages %}
        <li><a href="{{ p.url }}">{{ p.title | default(p.url) }}</a></li>
      {% endfor %}
      </ul>
    {% endif %}
  </body>
</html>
