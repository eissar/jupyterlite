<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title | default('Voici — Index') }}</title>
    <style>
      body{ font-family: system-ui, -apple-system, 'Segoe UI', Roboto; margin:0; background:#fff }
      header{ padding:1rem 1.25rem; border-bottom:1px solid #eef2f6 }
      main{ padding:1.25rem }
      .grid{ display:grid; grid-template-columns:repeat(auto-fit,minmax(220px,1fr)); gap:1rem }
      .tile{ background:#fbfdff; padding:1rem; border-radius:8px; box-shadow:0 1px 2px rgba(12,18,24,.04) }
      .tile a{ color:#0b5bbf; font-weight:600; text-decoration:none }
      .meta{ color:#6b7785; font-size:.9rem }
    </style>
  </head>
  <body>
    <header>
      <h1 style="margin:0">{{ title | default('Voici — Index') }}</h1>
      <div class="meta">Generated site index</div>
    </header>
    <main>
      {% if pages %}
        <div class="grid">
          {% for p in pages %}
            <div class="tile">
              <a href="{{ p.url }}">{{ p.title | default(p.url) }}</a>
              {% if p.description %}<div class="meta">{{ p.description }}</div>{% endif %}
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p>No pages generated.</p>
      {% endif %}
    </main>
  </body>
</html>
